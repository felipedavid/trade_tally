{{define "title"}}Login{{end}}

{{define "main"}}
    <div class="d-flex align-items-center h-100">
        <div class="specific-w-300 mw-100 mx-auto my-auto" id="login_form">
            <div class="mb-3">
                <label class="form-label" for="email">Email address</label>
                <input class="form-control" type="email" id="email" placeholder="Email Address" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="password">Password</label>
                <input class="form-control" type="password" id="password" placeholder="Password" required>
            </div>
            <div class="d-flex align-items-center mb-3">
                <div class="form-check mb-0">
                    <input class="form-check-input" type="checkbox" id="keep-login" value="">
                    <label class="form-check-label" for="keep-login">Keep logged in</label>
                </div>
                <button class="btn btn-primary ms-auto">Sign in</button>
            </div>
            <div class="text-center text-body-secondary pt-3 border-top">
                Do not have an account? <a href="/signup">Create one</a>
            </div>
        </div>
    </div>
{{end}}